[flake8]
# Python 코드 스타일 검사 설정

# 최대 줄 길이
max-line-length = 100

# 무시할 에러 코드
# E203: whitespace before ':' (black과 충돌)
# E501: line too long (max-line-length로 처리)
# W503: line break before binary operator (black과 충돌)
ignore = E203, E501, W503

# 제외할 디렉토리/파일
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    node_modules,
    .next,
    frontend

# 허용할 최대 복잡도
max-complexity = 10

# import 순서 검사
import-order-style = google

# 통계 출력
statistics = True

# 에러 수 제한
max-errors = 1000




